[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.sht, *.htm, *.html, *.shtm, *.shtml, *.ng}]
indent_style = space
indent_size = 2

[{*.jhm, *.tcx, *.rng, *.qrc, *.wsdl, *.fxml, *.xslt, *.jrxml, *.ant, *.xul, *.xsl, *.xsd, *.tld, *.jnlp, *.xml}]
indent_style = space
indent_size = 4

[{.babelrc, .stylelintrc, .eslintrc, jest.config, *.bowerrc, *.jsb3, *.jsb2, *.json}]
indent_style = space
indent_size = 2

[{*.pyw, *.py}]
indent_style = space
indent_size = 4

[*.pyi]
indent_style = space
indent_size = 4

[{*.pyx, *.pxi, *.pxd}]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 2

[{*.applejs, *.js}]
indent_style = space
indent_size = 2

[*.csv]
insert_final_newline = false

